{
  "extends": "@repo/config-typescript/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@tests/*": ["./__tests__/*"],
      "@mocks/*": ["./__mocks__/*"],
      "~ui/*": ["../../packages/ui/src/*"],
      "~shared-web/*": ["../../packages/shared-web/src/*"],
      "~shared-universal/*": ["../../packages/shared-universal/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src",
    "types",
    "__tests__",
    "__mocks__",
    "../../packages/ui/src",
    "../../packages/shared-web/src",
    "../../packages/shared-universal/src"
  ],
  "exclude": ["node_modules"]
}
