{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Next.js",
  "extends": "./base.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "allowJs": true,
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "paths": {
      "@ui/*": ["../../packages/ui/src/*"]
    },
    "types": ["vitest/globals", "@testing-library/jest-dom"]
  }
}
